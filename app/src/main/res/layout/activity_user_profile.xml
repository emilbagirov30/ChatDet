<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ll_info"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:typeface = "monospace"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Профиль"
            android:layout_marginVertical="5dp"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_user_avatar"
            android:background="@drawable/selection_avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:layout_marginVertical="10dp"/>
            <ImageView
                android:id="@+id/iv_select"
                android:background="@drawable/select"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:alpha="0"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
               />
        </FrameLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:typeface = "monospace"
                android:layout_height="wrap_content"
                android:text="Логин:"/>
            <EditText
                android:enabled="false"
                android:id="@+id/et_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="4dp"
                android:background="@drawable/rounded_edit_text_bg"
                android:hint="Логин"
                android:maxLength="25"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@+id/change_username"
                android:background="@drawable/change_data"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginVertical="10dp">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface = "monospace"
                android:text="Пароль:"/>
            <EditText
                android:enabled="false"
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_bg"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:hint="Пароль"
                android:maxLength="25"/>
            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@+id/change_password"
                android:background="@drawable/change_data"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface = "monospace"
                android:text="Кодовое слово:"/>
            <EditText
                android:enabled="false"
                android:id="@+id/et_code_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_bg"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:hint="Кодовое слово"
                android:maxLength="25"/>
            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@+id/change_code_word"
                android:background="@drawable/change_data"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content">
            <Button android:id="@+id/bt_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Назад"
                android:textAllCaps="false"/>
            <Button
                android:enabled="false"
                android:id="@+id/bt_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Сохранить"/>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:layout_gravity="center_horizontal"
        android:id="@+id/pb_loading_update"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
</LinearLayout>